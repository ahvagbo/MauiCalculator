<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiCalculator"
    Shell.FlyoutBehavior="Flyout"
    Title="MAUI Calculator"
    Loaded="Shell_Loaded">

    <ShellContent
        Title="Standard"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Scientific"
        ContentTemplate="{DataTemplate local:ScientificPage}"
        Route="ScientificPage" />

    <Shell.FlyoutFooter>
        <VerticalStackLayout Spacing="3">
            <Label Text="MAUI Calculator (development build)" />
            <Label Text="Copyright (C) 2023 Iurie Jurja" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
